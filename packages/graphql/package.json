{
  "name": "@antora-tools/graphql",
  "description": "An Antora extension to generate static schema information.",
  "version": "0.9.0",
  "main": "./lib/index.js",
  "license": "MIT",
  "author": {
    "name": "Marko Postma",
    "url": "https://github.com/markopostma"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "watch": "tsx scripts/build.ts -w",
    "lint": "npx eslint ./src ./test ./e2e/*.spec.ts --quiet",
    "prebuild": "npx rimraf ./lib",
    "prepublishOnly": "npm run lint && npm run build",
    "test:e2e": "npx playwright test",
    "test": "npx jest --testPathPattern=test/",
    "serve": "tsx scripts/serve.ts",
    "serve:all": "tsx scripts/serve.ts --playbook playbook.all.yml"
  },
  "files": [
    "./lib/*",
    "./templates/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "eta": "^3.5.0",
    "graphql": "^16.10.0",
    "json-to-graphql-query": "^2.3.0",
    "microfiber": "^2.1.1"
  },
  "devDependencies": {
    "@graphql-tools/graphql-file-loader": "^8.0.19",
    "@graphql-tools/load": "^8.1.0",
    "@graphql-tools/url-loader": "^8.0.31",
    "@playwright/test": "^1.52.0",
    "@types/http-server": "^0.12.4",
    "antora": "^3.1.10",
    "esbuild": "^0.25.2",
    "http-server": "^14.1.1",
    "msw": "^2.7.5",
    "rimraf": "^6.0.1"
  }
}
